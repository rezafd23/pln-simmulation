<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MeteranActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Ownner"
        android:layout_above="@+id/tv_token"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:layout_marginBottom="20dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Nilai TOKEN"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        />
    <com.xw.repo.XEditText
        android:id="@+id/et_token"
        android:layout_width="match_parent"
        android:inputType="phone"
        android:hint="Masukan Token"
        android:layout_height="56dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/tv_token"
        android:gravity="bottom"
        android:layout_centerVertical="true"
        android:nextFocusDown="@+id/btnLogin"
        android:imeOptions="actionNext"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_redeem"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/et_token"
        android:text="Masukan Token"/>
</RelativeLayout>